<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/relativelayoutrooms"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mishka.flagmemorine.activity.RoomsActivity"
    tools:showIn="@layout/app_bar_rooms">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/userNameET"
        android:layout_alignBottom="@+id/userNameET"
        android:layout_alignParentStart="true"
        android:text="@string/your_name" />

    <EditText
        android:id="@+id/userNameET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <RadioButton
        android:id="@+id/radioButton4x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userNameET"
        android:layout_marginTop="16dp"
        android:text="@string/_4x4" />

    <RadioButton
        android:id="@+id/radioButton6x6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioButton4x4"
        android:text="@string/_6x6" />

    <Button
        android:id="@+id/roomCreateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/radioButton6x6"
        android:layout_alignEnd="@+id/userNameET"
        android:text="@string/create" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/roomCreateBtn"
        android:id="@+id/roomList" />

</RelativeLayout>
