<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/relativelayout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mishka.flagmemorine.activity.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <eu.davidea.flipview.FlipView
        android:id="@+id/image"
        android:tag="0"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_width="@dimen/fv_mini"
        android:layout_height="@dimen/fv_mini"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:clickable="true"
        android:clipToPadding="false"
        android:padding="4dp"
        app:frontBackgroundColor="@android:color/white"
        app:frontBackground="@drawable/unknown"
        app:rearBackgroundColor="@android:color/white"
        app:rearBackground="@drawable/unknown"
        app:checked="false"
        app:enableInitialAnimation="true"
        app:animationDuration="400"
        app:frontImage="@drawable/unknown"
        app:frontLayout="@layout/flip_front_custom"
        app:rearImage="@drawable/russia"
        app:rearImageAnimationDelay="0"
        app:rearLayout="@layout/flip_rear_custom" />




</RelativeLayout>
