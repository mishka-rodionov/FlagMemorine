<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rodionov.mishka.flagmemorine">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/united_nations"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.RoomsActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_rooms"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rodionov.mishka.flagmemorine.activity.BattleFieldActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_battle_field"
            android:parentActivityName="com.rodionov.mishka.flagmemorine.activity.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rodionov.mishka.flagmemorine.activity.RoomBattleFieldActivity"
            android:configChanges="orientation"
            android:parentActivityName="com.rodionov.mishka.flagmemorine.activity.StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.rodionov.mishka.flagmemorine.activity.StartActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rodionov.mishka.flagmemorine.activity.StatisticActivity"
            android:configChanges="orientation"
            android:parentActivityName="com.rodionov.mishka.flagmemorine.activity.StartActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.rodionov.mishka.flagmemorine.activity.UserInfoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_user_info"
            android:parentActivityName="com.rodionov.mishka.flagmemorine.activity.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.rodionov.mishka.flagmemorine.activity.EndOfGameActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_end_of_game"
            android:parentActivityName="com.rodionov.mishka.flagmemorine.activity.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.rodionov.mishka.flagmemorine.activity.TestInteraction" />
        <activity android:name="com.rodionov.mishka.flagmemorine.activity.WaitUserActivity"
            android:configChanges="orientation"
            android:label="@string/title_wait_user_activity"
            android:parentActivityName="com.rodionov.mishka.flagmemorine.activity.StartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>